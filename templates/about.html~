{% extends "site.new.master" %}
{% block extras %}
	<script>
		$(function() {
			$(".popup").click(function(e) {
				e.preventDefault();
				window.openDialog("#popbox");
				$("#popbox iframe").attr("src", $(this).attr("href")); //this=.popup, !#popbox iframe
				$("#poplink").attr("href", "http://www." + $(this).attr("website"));
				$("#poplink").text($(this).attr("website"));
			});
			$("#cylonNinja").mouseover(function() {
				$("#cylonNinja").animate({
					bottom: "-86px"
				}, "slow");
				$("#cylonDojo").get(0).pause();
				$("#cylonDojo").get(0).currentTime = 0;
				$("#cylonDojo").get(0).play();
			});
			
			$("#cylonNinja").mouseout(function() {
				$("#cylonNinja").animate({
					bottom: "-215px"
				}, "slow");
			});
		});
	</script>
{% endblock extras %}
