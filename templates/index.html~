{% block extras %}
	<script>
		$(function() {
			var hashlist = [];
			jQuery.get("{{url_for('get_hashlist')}}", function(data) {
				hashlist = $.parseJSON(data);
			});

			var i = 0;
			setTimeout(function() {
				$("#" + hashlist[i]).fadeOut(450);
				i += 1;
				if (i > hashlist.length-1) {
					i = 0;
				}
				setTimeout(function() {
					$("#" + hashlist[i]).fadeIn(450);
				}, 500);
				setInterval(function() {
					$("#" + hashlist[i]).fadeOut(450);
					i += 1;
					if (i > hashlist.length-1) {
						i = 0;
					}
					setTimeout(function() {
						$("#" + hashlist[i]).fadeIn(450);
					}, 500);
				}, 2000);
			}, 1500);
			$("#loading").fadeOut(1000);
			setTimeout(function() {
				$("#frontCarousel").fadeIn("slow");
			}, 1000);
		});
	</script>
{% endblock extras %}

{% block left %}
	<h3>Kids Learn to Code!</h3>
	<p>CoderDojo Silicon Valley teaches programming languages to youth, ages 7-17, at independently run dojos in <a href="/dojos/San%20Francisco">San Francisco</a>, <a href="/dojos/Mountain%20View">Mountain View</a>, and <a href="/dojos/San%20Jose">San Jose</a>, California.</p>
	<p>CoderDojo Silicon Valley is a Bay Area instance of <a href="http://www.coderdojo.com">CoderDojo</a>, a global collaboration of <em>free</em> and open programing clubs run by enthusiastic volunteers. At CoderDojos around the world, young people, along with parents and mentors, learn how to code, develop websites, make apps, program games and more!</p>
